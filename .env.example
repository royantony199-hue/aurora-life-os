# Aurora Life OS Environment Variables
# Copy this file to .env and fill in your values

# Application
APP_NAME="Aurora Life OS"
VERSION="1.0.0"
ENVIRONMENT=development
DEBUG=true

# Security - REQUIRED: Generate secure keys
SECRET_KEY=your-256-bit-secret-key-here
REFRESH_SECRET_KEY=your-256-bit-refresh-key-here
ENCRYPTION_KEY=your-fernet-encryption-key-here

# Database
DATABASE_URL=sqlite:///./aurorya.db  # Use PostgreSQL in production

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# API Security
API_RATE_LIMIT_PER_MINUTE=100
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# CORS - Update for production
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000"
ALLOWED_HOSTS="localhost,127.0.0.1"

# External APIs
OPENAI_API_KEY=your-openai-api-key-here

# Google Services (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8001/api/calendar/oauth2callback

# Redis (optional in development)
REDIS_URL=redis://localhost:6379/0

# To generate secure keys:
# SECRET_KEY: openssl rand -hex 32
# REFRESH_SECRET_KEY: openssl rand -hex 32
# ENCRYPTION_KEY: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"