# Aurora Life OS Environment Configuration
# Copy this file to .env and update with your actual values

# Application
APP_NAME="Aurora Life OS"
VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true

# Security
SECRET_KEY="your-super-secret-jwt-key-here-change-this-in-production"
REFRESH_SECRET_KEY="your-refresh-token-secret-key-here"
ENCRYPTION_KEY="your-data-encryption-key-here-32-chars"

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/aurora_db"
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30
ALGORITHM="HS256"

# API Security
API_RATE_LIMIT_PER_MINUTE=100
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# CORS (comma-separated list)
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000"
ALLOWED_HOSTS="localhost,127.0.0.1"

# External APIs
OPENAI_API_KEY="your-openai-api-key-here"

# Google Services
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:8000/auth/google/callback"

# Redis
REDIS_URL="redis://localhost:6379/0"
REDIS_PASSWORD=""

# Monitoring & Logging
LOG_LEVEL="INFO"
ENABLE_METRICS=true
SENTRY_DSN=""

# Email (for notifications)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
FROM_EMAIL="noreply@auroralifeos.com"

# File Storage
UPLOAD_DIR="/app/uploads"
MAX_FILE_SIZE_MB=10

# SSL/HTTPS
SSL_KEYFILE=""
SSL_CERTFILE=""
FORCE_HTTPS=false